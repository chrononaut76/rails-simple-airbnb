<%= render "navbar" %>
<div class="container mt-3">
  <h2>All our Flats (<%= @flats.count %>)</h2>
  <div class="container">
    <div class="row g-3">
      <% @flats.each do |flat| %>
      <div class="col-sm-6">
        <%= render "card", flat: flat %>
      </div>
      <% end %>
    </div>
  </div>
</div>