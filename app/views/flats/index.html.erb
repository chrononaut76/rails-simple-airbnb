<nav class="navbar navbar-light bg-light">
  <div class="container-fluid">
    <a href="#" class="navbar-brand">Simple Airbnb</a>
    <button class="btn btn-outline-primary">
    <%= link_to "Add Flat", new_flat_path, class: "text-decoration-none" %>
    </button>
  </div>
</nav>
<div class="container mt-3">
  <h2>All our Flats (<%= @flats.count %>)</h2>
  <div class="container">
    <div class="row g-3">
      <% @flats.each do |flat| %>
      <div class="col-sm-6">
        <div class="card" style="width: 18rem;">
          <div class="card-header">
            <h5 class="card-title"><%= flat.name %></h5>
            <p class="card-text"><%= flat.address %></p>
            <div class="row">
              <div class="col">
                <div class="card-text">
                  <%= tag.span class: %w[fa-solid fa-user-group] %>
                  <%= flat.number_of_guests %>
                </div>
              </div>
              <div class="col">
                <div class="card-text">
                  <%= tag.span class: %w[fa-solid fa-euro-sign] %>
                  <%= flat.price_per_night %>
                </div>
              </div>
            </div>
          </div>
          <div class="card-body">
            <%= link_to "More info", flat_path(flat), class: 'card-link' %>
          </div>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>